def rainfall_statistics():
    months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "november", "December"]
    rainfall = []
    for month in months:
        while True:
            try:
                rain = float(input("Enter the total rainfall for {month}: "))
                rainfall.append(rain)
                break
            except ValueError:
                print("Please enter a valid number.")
    total_rainfall = sum(rainfall)
    avg_rainfall = total_rainfall / 12

    max_rainfall = max(rainfall)
    min_rainfall = min(rainfall)

    max_month = months[rainfall.index(max_rainfall)]
    min_month = months[rainfall.index(min_rainfall)]

    print(f"\nTotal rainfall for the Year: {total_rainfall:.2f} inches.")
    print(f"\nAverage Monthly rainfall: {avg_rainfall:.2f} inches.")
    print(f"\nHighest rainfall: {max_month} with {max_rainfall:.2f} inches.")
    print(f"\nLowest rainfall: {min_month} with {min_rainfall:.2f} inches.")

rainfall_statistics()
    
